FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"8"},{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"},{"data":{"id":"FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"Peter asked her, "}]}]},{"data":{"color":"green","recipient":"Sapphira","source":"Simon Peter","time_period":["0s AD"],"unique_recipients":["Sapphira"],"unique_sources":["Simon Peter"]},"nodes":[{"type":"prose","nodes":[{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"},{"data":{"id":"FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"“Was this the price you and your husband received for your land?”"}]}]},{"data":{"color":"blue","recipient":"Simon Peter","source":"Sapphira","time_period":["0s AD"],"unique_recipients":["Simon Peter"],"unique_sources":["Sapphira"]},"nodes":[{"type":"prose","nodes":[{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"}],"object":"leaf","text":"\t"},{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"},{"data":{"id":"FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"“Yes,” "}]}]},{"data":{"color":"black","source":"The Narrator","time_period":["0s AD"],"unique_sources":["Luke"]},"nodes":[{"type":"prose","nodes":[{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"},{"data":{"id":"FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"she replied, "}]}]},{"data":{"color":"blue","recipient":"Simon Peter","source":"Sapphira","time_period":["0s AD"],"unique_recipients":["Simon Peter"],"unique_sources":["Sapphira"]},"nodes":[{"type":"prose","nodes":[{"marks":[{"data":{"book":"Act","chapter":"5","verse":"8"},"object":"mark","type":"reference"},{"data":{"id":"FAM-47"},"object":"mark","type":"keyPassage"}],"object":"leaf","text":"“that was the price.” "}]}]},{"data":{"color"